@model ICollection<Brend>

@{
    int count = 1;
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Partnyorlar</h4>
           

            <div class="table-responsive pt-3">
                <a class="btn btn-success text-light" asp-area="Admin" asp-controller="Brand" asp-action="Create">Create</a>
                <table class="table table-light">
                    <thead>
                        <tr>
                            <th>
                                Number
                            </th>
                            <th>
                                Brend name
                            </th>
                            
                            <th>
                                Image
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                       
                        @foreach (Brend item in Model)
                        {
                            <tr>
                                <td> @count</td>

                                <td>
                                    @item.Name
                                </td>
                                
                                <td><img src="~/assets/imgs/@item.ImagePath" height="200px"  /></td>
                                <td>
                                    <a class="btn btn-warning text-light" asp-area="Admin" asp-controller="Brand" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                                    <a class="btn btn-danger text-light" asp-area="Admin" asp-controller="Brand" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                                </td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
﻿
