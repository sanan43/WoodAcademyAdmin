@using WoodAcademy.Areas.Admin.ViewModels.Auth﻿
@model RegisterVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Wood Academy</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/admin/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/admin/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/admin/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/admin/images/wood1.jpg" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
                <div class="row flex-grow">
                    <div class="col-lg-6 d-flex align-items-center justify-content-center">
                        <div class="auth-form-transparent text-left p-3">
                            <div class="brand-logo">
                                <img src="~/admin/images/Woodlogo.jpg" alt="logo">
                                <h1>Wood Academy Admin</h1>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form class="pt-3" method="post">
                                
                                <div class="form-group">
                                    <label asp-for="UserName">Username</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span asp-validation-for="UserName"></span>
                                        </div>
                                        <input asp-for="UserName" class="form-control form-control-lg border-left-0" placeholder="Username">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FullName">FullName</label>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            
                                        </div>
                                        <input asp-for="FullName" class="form-control form-control-lg border-left-0" placeholder="FullName">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            
                                        </div>
                                        <input asp-for="Email" class="form-control form-control-lg border-left-0" placeholder="Email">
                                    </div>
                                </div>
                               
                                <div class="form-group">
                                    <label asp-for="Password">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <div class="input-group">
                                        
                                        <div class="input-group-prepend bg-transparent">
                                            
                                        </div>
                                        <input asp-for="Password" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="Password">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" >ConfirmPassword</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <div class="input-group">
                                        
                                        <div class="input-group-prepend bg-transparent">
                                            
                                        </div>
                                        <input asp-for="ConfirmPassword" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="Password">
                                    </div>
                                </div>
                              
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a  asp-controller="Account" asp-action="Login" class="text-primary">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                   
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/admin/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/admin/js/off-canvas.js"></script>
    <script src="~/admin/js/hoverable-collapse.js"></script>
    <script src="~/admin/js/template.js"></script>
    <!-- endinject -->
</body>

</html>