                    <img class="card-img-top" src="/assets/imgs/Door/door.jpg" alt="" height="300px">
                    <div class="card-body">
                        <h5 class="card-title">Qapılar</h5>

                        <a type="submit" asp-controller="Door" asp-action="Index" class="btn btn-primary">Daha çox</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-4 col-12 mb-5">
               
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="/assets/imgs/Tv/Stend1.jpg" alt="" height="300px">
                    <div class="card-body">
                        <h5 class="card-title">TV Stend</h5>

                        <a type="submit" asp-controller="Tv" asp-action="Index" class="btn btn-primary">Daha çox</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-4 col-12 mb-5">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="/assets/imgs/Bath/Bath1.jpg" alt="" height="300px">
                    <div class="card-body">
                        <h5 class="card-title">Hamam</h5>

                        <a type="submit" asp-controller="Bath" asp-action="Index" class="btn btn-primary">Daha çox</a>
                    </div>
                </div>
            </div>


        </div><!-- end of Row -->
    </div><!-- End of Cotanier -->
   
 

</section><!-- End of features Section -->
<!-- Section -->
<!-- Testmonial Section -->
<section class="text-center pt-5" id="partnyorlar">
    <!-- Container -->
    <div class="container">
        <h1 class="mt-3 mb-5 pb-5">Partnyorlar</h1>
        <!-- Row -->
        <div class="row">
            @foreach (Brend brend in Model.brends)
            {
                <div class="col-sm-10 col-md-3 m-auto">
                    <div class="testmonial-wrapper">
                        <img src="~/assets/imgs/@brend.ImagePath" alt="client image">
                        <h6 class="title mb-3">@brend.Name</h6>

                    </div>
                </div>
            }


        </div><!-- end of Row -->
    </div><!-- End of Cotanier -->
</section><!-- End of Testmonial Section -->
<!-- Section -->
<!-- Contact Section -->
<section id="contact" class="text-center">
    <!-- container -->
    <div class="container">
        <h4>Bizimlə Əlaqə</h1>
        <p class="mb-5">
            Suallarınız varsa və ya köməyə ehtiyacınız varsa! Zəhmət olmasa bizimlə əlaqə saxlayın! <br>

        </p>

        <!-- Contact form -->
        <form class="contact-form col-md-11 col-lg-9 mx-auto" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="col form-group">

                    <input asp-for="ad" class="form-control" placeholder="Ad">

                </div>
                <div class="col form-group">
                    <input asp-for="mail" class="form-control" placeholder="E-mail">
                </div>
            </div>
            <div class="form-group">
                <textarea asp-for="mesaj" id="" cols="30" rows="5" class="form-control" placeholder="Mesajınız"></textarea>
            </div>
            <div class="form-group">

                <button type="submit" asp-controller="Home" asp-action="Send" class="btn btn-primary">Göndər</button>

            </div>
        </form><!-- End of Contact form -->
    </div><!-- End of Container-->
</section><!-- End of Contact Section -->
