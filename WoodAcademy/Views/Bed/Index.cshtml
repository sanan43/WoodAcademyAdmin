        <div class="header-content">
            @*<h6>Wood Academy</h6>*@
        </div>

    </header><!-- End of Page Header -->

    <br />
    <div class="container">
        
        <div class="d-flex flex-row gap-2 flex-wrap">
            @foreach (BedImages item in Model.images)
            {
                <div class="col-sm-12 col-md-6 col-12 mb-5">
                    <img src="~/assets/imgs/Bed/@item.ImagePath" alt="" class="img-thumbnail" height="400px" width="500px">
                </div>
            }
            
        </div>
    </div>

    <!-- Section -->
