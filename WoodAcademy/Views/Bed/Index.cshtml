                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Əsas Səhifə</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Haqqımızda</a>
